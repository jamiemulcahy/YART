{
  "name": "yart",
  "version": "1.0.0",
  "private": true,
  "description": "Yet Another Retro Tool - Real-time retrospective facilitation",
  "scripts": {
    "dev": "concurrently -n worker,frontend -c blue,green \"pnpm dev:worker\" \"pnpm dev:frontend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:worker": "pnpm --filter worker dev",
    "build": "pnpm --filter frontend build",
    "test": "pnpm --filter frontend test",
    "test:e2e": "pnpm --filter frontend test:e2e",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.46.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
